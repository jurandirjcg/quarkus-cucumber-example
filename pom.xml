	<plugin>
		<groupId>com.spotify</groupId>
		<artifactId>dockerfile-maven-plugin</artifactId>
		<version>1.4.13</version>
		<configuration>
			<repository>paciente-service</repository>
			<tag>${project.version}</tag>
			<buildArgs>
				<JAR_FILE>${project.build.finalName}-thorntail.jar</JAR_FILE>
			</buildArgs>	
		</configuration>
	</plugin>
    </plugins>
  </build>
  
  <dependencies>
  	<!-- Logging -->
  	<dependency>
      <groupId>io.thorntail</groupId>
      <artifactId>logging</artifactId>
  	</dependency>
    <!-- JTA -->
  	<dependency>
      <groupId>io.thorntail</groupId>
      <artifactId>transactions</artifactId>
  	</dependency>
    <!-- JPA -->
    <dependency>
      <groupId>io.thorntail</groupId>
      <artifactId>jpa</artifactId>
    </dependency>
    <!-- Dependencias da especificação Eclipse Microprofile -->
  	<dependency>
      <groupId>io.thorntail</groupId>
      <artifactId>microprofile</artifactId>
  	</dependency>
    <!-- JPA Modelgen -->
    <dependency>
      <groupId>org.hibernate</groupId>
      <artifactId>hibernate-jpamodelgen</artifactId>
      <version>${version.hibernate-jpamodelgen}</version>
    </dependency>
    <!-- Canary -->
    <dependency>
	  <groupId>br.com.jgon</groupId>
	  <artifactId>canary</artifactId>
	  <version>${version.canary}</version>
	</dependency>
    <!-- PostgreSQL -->
    <dependency>
	  <groupId>org.postgresql</groupId>
	  <artifactId>postgresql</artifactId>
	  <version>${version.postgresql}</version>
    </dependency>
    <!-- Outras dependencias -->
	<dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
      <version>${version.commons-collections}</version>
    </dependency>
    <!-- MODELGEN -->
	<dependency>
	  <groupId>org.hibernate</groupId>
		<artifactId>hibernate-jpamodelgen</artifactId>
		<version>${version.hibernate-jpamodelgen}</version>
		<exclusions>
		  <exclusion>
			<groupId>org.jboss.logging</groupId>
			<artifactId>jboss-logging</artifactId>
		  </exclusion>
		</exclusions>
	</dependency>
  </dependencies>
</project>
